mixin alert(time)
   - if (messages.success)
    .message.info
     div( class="alert alert-success"
      role="alert"
      data-time=time
      show-alert
      ) #{messages.success} <span close-alert> X </span>

mixin alert-error(time)
   - if (messages.error)
    .message.info
     div( class="alert alert-danger"
      role="alert"
      data-time=time
      show-alert
      ) #{messages.error} <span close-alert> X </span>